{% extends 'base.html.twig' %}

{% block body %}
	<!-- page start-->
	<div class="col-sm-8">
		<section class="panel">
			<div class="chat-room-head">
				<h3>
					<i class="fa fa-angle-right"></i>
					Gérer les marques</h3>
			</div>
			<div class="panel-body">

				<table class="table table-striped table-advance table-hover">
					<thead>
						<tr class="tableau-entete">
							<th>
								<i class="fa fa-bullhorn"></i>
								Identif</th>
							<th>
								<i class="fa fa-bookmark"></i>
								Nom</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{% for marque in marques %}
							<tr>
								<td>{{ marque.id }}</td>
								<td>{{ marque.nomMarque }}</td>
								<td>
									<a href="{{ path('app_marque_show', {'id': marque.id}) }}">
										<button class="btn btn-primary btn-xs">
											<i class="fa fa-tasks"></i>
										</button>
									</a>
									<a href="{{ path('app_marque_edit', {'id': marque.id}) }}">
										<button class="btn btn-primary btn-xs">
											<i class="fa fa-pencil"></i>
										</button>
									</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3">aucune marque enregistrée en base de données</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

				<a href="{{ path('app_marque_new') }}">
					<button class="btn btn-primary btn-
							xs">
						<i class="fa fa-plus"></i>
					</button>
				</a>
			</div>
			<!-- fin div panel-body-->
		</section>
		<!-- fin section tournois-->
	</div>
	<!--fin div col-sm-8-->
{% endblock %}
