{% extends "base.html.twig" %}
{% block central %}
	<!-- page start-->
	<div class="col-sm-10">
		<section class="panel">
			<div class="chat-room-head">
				<h3>
					<i class="fa fa-angle-right"></i>
					Gérer les PEGI</h3>
			</div>
			<div class="panel-body">
				<table class="table table-striped table-advance table-hover">
					<thead>
						<tr class="tableau-entete">
							<th>
								<i class="fa fa-bullhorn"></i>
								Identifiant</th>
							<th>
								<i class="fa fa-bookmark"></i>
								Âge limite</th>
							<th>
								<i class="fa fa-file-text"></i>
								Description</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{{ include('messages.html.twig') }}
						<!-- formulaire pour ajouter un nouveau pegi-->
						<tr>
							<form action="{{path('pegis_ajouter')}}" method="post">
								<td>Nouveau</td>
								<td>
									<input type="number" id="txtAgeLimite" name="txtAgeLimite" min="0" max="99" required placeholder="Âge" title="Âge limite (0-99)"/>
								</td>
								<td>
									<textarea id="txtDescPegi" name="txtDescPegi" rows="2" cols="60" required minlength="10" maxlength="400" placeholder="Description du PEGI" title="De 10 à 400 caractères"></textarea>
								</td>
								<td>
									<button class="btn btn-primary btn-xs" type="submit" name="cmdAction" value="ajouterNouveauPegi" title="Enregistrer nouveau PEGI">
										<i class="fa fa-save save"></i>
									</button>
									<button class="btn btn-info btn-xs" type="reset" title="Effacer la saisie">
										<i class="fa fa-eraser"></i>
									</button>
								</td>
							</form>
						</tr>
						{% for key, pegi in tbPegis %}
							<tr>
								<!-- formulaire pour demander la modification et supprimer les pegis-->
								<form method="post">
									<td>{{ pegi.identifiant }}<input type="hidden" name="txtIdPegi" value="{{ pegi.identifiant }}"/></td>
									<td>
										{% if pegi.identifiant != idPegiModif %}
											{{ pegi.ageLimite }}
										</td>
										<td>
											{{ pegi.description }}
										</td>
										<td>
											{% if notification != 'rien' and pegi.identifiant == idPegiNotif %}
												<button class="btn btn-success btn-xs">
													<i class="fa fa-save check"></i>
													{{ notification }}</button>
											{% endif %}
											<button class="btn btn-primary btn-xs" type="submit" name="cmdAction" value="demanderModifierPegi" title="Modifier" formaction="{{path('pegis_demandermodifier')}}">
												<i class="fa fa-pencil"></i>
											</button>
											<button class="btn btn-danger btn-xs" type="submit" name="cmdAction" value="supprimerPegi" title="Supprimer" formaction="{{path('pegis_supprimer')}}" 
												onclick="return confirm('Voulez-vous vraiment supprimer ce PEGI ?');">
												<i class="fa fa-trash-o "></i>
											</button>
										</td>
									{% else %}
										<input type="number" id="txtAgeLimite" name="txtAgeLimite" min="0" max="99" required value="{{ pegi.ageLimite }}"/>
									</td>
									<td>
										<textarea id="txtDescPegi" name="txtDescPegi" rows="2" cols="60" required minlength="10" maxlength="400">{{ pegi.description }}</textarea>
									</td>
									<td>
										<button class="btn btn-primary btn-xs" type="submit" name="cmdAction" value="validerModifierPegi" title="Enregistrer" formaction="{{path('pegis_validermodifier')}}">
											<i class="fa fa-save"></i>
										</button>
										<button class="btn btn-info btn-xs" type="reset" title="Effacer la saisie">
											<i class="fa fa-eraser"></i>
										</button>
										<button class="btn btn-warning btn-xs" type="submit" name="cmdAction" value="annulerModifierPegi" title="Annuler" formaction="{{path('pegis_afficher')}}">
											<i class="fa fa-undo"></i>
										</button>
									</td>
								{% endif %}
							</form>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		<!-- fin div panel-body-->
	</section>
	<!-- fin section pegis-->
</div>
<!--fin div col-sm-10-->
{% endblock %}