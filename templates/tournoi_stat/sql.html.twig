{% extends 'base.html.twig' %}
{% block title %}Statistiques
	{{ mode }}
{% endblock %}
{% block body %}
	<div class="col-sm-8">
		<section class="panel">
			<div class="chat-room-head">
				<h3>
					<i class="fa fa-database"></i>
					Dashboard Tournois avec
					{{ mode }}
				</h3>
			</div>
			<div class="panel-body">
				<form method="get" action="{{ app.request.pathinfo }}" class="mb-3">
					<label for="datemax">Afficher les tournois après le :</label>
					<input type="date" name="datemax" id="datemax" value="{{ datemax }}"/>
					<button type="submit" class="btn btn-primary btn-sm">Filtrer</button>
				</form>
				<table class="table table-striped table-advance table-hover">
					<thead>
						<tr>
							<th>Libellé</th>
							<th>Catégorie</th>
							<th>Date</th>
						</tr>
					</thead>
					<tbody>
						{% for t in stats %}
							<tr>
								<td>{{ t.libelle }}</td>
								<td>{{ t.categorie }}</td>
								<td>{{ t.date }}</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3">
									<em>Aucun tournoi trouvé après
										{{ datemax }}</em>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</section>
	</div>
{% endblock %}
