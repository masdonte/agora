{% extends 'base.html.twig' %}

{% block title %}Pegi index
{% endblock %}

{% block body %}
	<div class="col-sm-8">
		<section class="panel">
			<div class="chat-room-head">
				<h3>
					<i class="fa fa-angle-right"></i>
					GÃ©rer les pegi</h3>
			</div>
			<div class="panel-body">

				<table class="table" table-striped table-advance table-hover">
					<thead>
						<tr>
							<th><i class="fa fa-bullhorn"></th>
							<th><i class="fa-solid fa-child"></i>Age</th>
							<th><i class="fa-chisel fa-regular fa-address-card"></i></i>Description</th>
							<th><i class="fa-solid fa-location-arrow"></i></th>
						</tr>
					</thead>
					<tbody>
						{% for pegi in pegis %}
							<tr>
								<td>{{ pegi.id }}</td>
								<td>{{ pegi.Age }}</td>
								<td>{{ pegi.Description }}</td>
								<td>
									<a href="{{ path('app_pegi_show', {'id': pegi.id}) }}"><i class="fa-regular fa-newspaper"></i></a>
									<a href="{{ path('app_pegi_edit', {'id': pegi.id}) }}"><i class="fa-solid fa-file-pen"></i></a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="4">no records found</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>

				<a href="{{ path('app_pegi_new') }}"><i class="fa-solid fa-circle-plus"></i></a>
			{% endblock %}
