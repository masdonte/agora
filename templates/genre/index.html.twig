{% extends 'base.html.twig' %}

{% block title %}Gestion des Genres{% endblock %}

{% block body %}
	<!-- page start-->
	<div class="col-sm-12">
		<section class="panel">
			<div class="chat-room-head">
				<h3>
					<i class="fa fa-angle-right"></i>
					Gérer les genres</h3>
			</div>
			<div class="panel-body">
				<table class="table table-striped table-advance table-hover">
					<thead>
						<tr class="tableau-entete">
							<th>
								<i class="fa fa-hashtag"></i>
								ID</th>
							<th>
								<i class="fa fa-tags"></i>
								Libellé Genre</th>
							<th>
								<i class="fa fa-cogs"></i>
								Actions</th>
						</tr>
					</thead>
					<tbody>
						{% for genre in genres %}
							<tr>
								<td>{{ genre.id }}</td>
								<td>{{ genre.libGenre }}</td>
								<td>
									<a href="{{ path('app_genre_show', {'id': genre.id}) }}">
										<button class="btn btn-info btn-xs" title="Voir">
											<i class="fa fa-eye"></i>
										</button>
									</a>
									<a href="{{ path('app_genre_edit', {'id': genre.id}) }}">
										<button class="btn btn-warning btn-xs" title="Modifier">
											<i class="fa fa-pencil"></i>
										</button>
									</a>
									<a href="{{ path('app_genre_delete', {'id': genre.id}) }}" onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce genre ?');">
										<button class="btn btn-danger btn-xs" title="Supprimer">
											<i class="fa fa-trash"></i>
										</button>
									</a>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="3">Aucun genre enregistré en base de données</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
				<a href="{{ path('app_genre_new') }}">
					<button class="btn btn-success">
						<i class="fa fa-plus"></i>
						Ajouter un genre
					</button>
				</a>
			</div>
			<!-- fin div panel-body-->
		</section>
		<!-- fin section genre-->
	</div>
	<!--fin div col-sm-12-->
{% endblock %}